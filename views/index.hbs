    <title>Gallery</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0
        }

        body {
            padding: 2rem
        }

        ul {
            padding: 1rem;
            display: flex;
            list-style: none;
            justify-content: space-around;
            flex-wrap: wrap
        }

        li {
            background-color: #ffdfd9;
            color: #000;
            padding: .51rem
        }

        .container {
            margin-top: 1rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 290px));
            grid-gap: 1rem;
            padding: 1rem;
            justify-content: center;
            box-shadow: 0 1px 1px #000
        }

        img {
            background-position: top;
            background-size: cover;
            height: 200px;
            width: 290px;
            box-shadow: 0 2px 10px #000;
            cursor: pointer;
            transition: all .2s
        }

        img:hover {
            box-shadow: none;
            transform: scale(1.1)
        }
    </style>

